<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_home_popup">


    <com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/shape_home_popup"
        android:layout_marginTop="30px"
        android:layout_marginBottom="30px"
        android:layout_marginRight="60px"
        android:layout_marginLeft="60px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录"
            android:gravity="center"
            android:textColor="#000"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="此功能仅限手机号登录用户使用，请先登录"
            android:gravity="center"
            android:layout_margin="20px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="取消"
                android:id="@+id/back_button"
                android:textColor="#000"
                android:layout_weight="1"
                android:background="@drawable/home_popupwindow_button_selector"/>

            <Button
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="去登录"
                android:textColor="@color/YuniFangZhangHao_textColor"
                android:id="@+id/goto_Login_button"
                android:layout_weight="1"
                android:background="@drawable/home_popupwindow_button_selector"/>

        </LinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>